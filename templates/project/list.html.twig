{% extends "base.html.twig" %}
 {% block stylesheets %}
        <link rel="stylesheet"  href="{{ asset('style/style.css')}} " />
  {% endblock %}
{% block body %}
<h1>Projects</h1>
<a href=" {{ path('project_add') }}">Ajouter un projet</a>
 {% for project in projects %}
     <h2> Nom du project :  {{ project.name }} </h2>
     <h2>Statut : {{ project.status }}</h2>
   <h2> Ajouté le : {{ project.startedAt|date('Y-m-d') }} </h2>
     <small>Nombre de Tâches : {{ project.tasks|length }}</small>
<a href=" {{ path('project_gestion', {id: project.id}) }}">Gérer</a>
   
 {% endfor %}

    


{% endblock %}
